  <div id="body">

    <p style="color: green"><%= notice %></p>
    
    <div class="card" style="width: 31rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @tweet.UserName %></h5>
        <p class="card-text"><%= @tweet.Description %></p>
