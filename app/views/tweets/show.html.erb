          <%= link_to "Editar Tweet", edit_tweet_path(@tweet), :class => "btn btn-primary" %>
        </div>
        <div class="d-inline-block p-1">
          <%= button_to "Eliminar Tweet" , @tweet, method: :delete, :class => "btn btn-danger",
          form: {data: {turbo_confirm: 'Â¿Esta Seguro de Eliminar?'}}%>
        </div>
        <div class="d-inline-block p-1">
          <%= link_to "Volver a los Tweets" , tweets_path, :class => "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>

 </div>